type Person {
    id: ID!
    name: String!
    phones: [Phone!]
}

type Phone {
    type: PhoneType!
    phone: String!
}

enum PhoneType {
    MOBILE
    HOUSE
    WORK
}

input PhoneInput {
    type: PhoneType!
    phone: String!
}

type Query {
    people(limit: Int = 0, offset: Int = 0): [Person]!
}

type Mutation {
    addPerson(name: String!) : Person!
    addPhoneToPerson(personId: ID!, phone: PhoneInput!) : Phone
}
